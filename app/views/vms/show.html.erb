<div class="row">
  <div class="col-md-4 offset-md-4">
    <p id="notice"><%= notice %></p>

    <h3>Overview</h3>

    <table class="table">
      <tbody>
        <tr>
          <th scope="row">IP</th>
          <td><%= @vm.ip %></td>
        </tr>
        <tr>
          <th scope="row">Type</th>
          <td><%= link_to @vm.vm_size.size_name, @vm.vm_size %></td>
        </tr>
        <tr>
          <th scope="row">Status</th>
          <td><span class="badge badge-success"><%= @vm.status %></span></td>
        </tr>
        <tr>
          <th scope="row">Server</th>
          <td><%= @vm.server.ip %></td>
        </tr>
      </tbody>
    </table>

    <%= link_to 'Edit', edit_vm_path(@vm) %> |
    <%= link_to 'Back', vms_path %>
  </div>
</div>
