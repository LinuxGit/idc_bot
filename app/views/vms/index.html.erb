<p id="notice"><%= notice %></p>

<h3>VM List</h3>

<table class="table">
  <thead>
    <tr class="table-secondary">
      <th>IP</th>
      <th>Type</th>
      <th>Status</th>
      <th>Server</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @vms.each do |vm| %>
      <tr>
        <td><%= link_to vm.ip, vm %></td>
        <td><%= link_to vm.vm_size.size_name, vm.vm_size %></td>
        <td><span class="badge badge-success"><%= vm.status %></span></td>
        <td><%= vm.server.ip %></td>
        <td><%= link_to 'Edit', edit_vm_path(vm) %></td>
        <td><%= link_to 'Destroy', vm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @vms %>
