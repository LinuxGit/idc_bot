<%= form_with(model: vm_size, local: true) do |form| %>
  <% if vm_size.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vm_size.errors.count, "error") %> prohibited this vm_size from being saved:</h2>

      <ul>
      <% vm_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :size_name, "VM type" %>
    <%= form.text_field :size_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cpu_cores, "CPU cores" %>
    <%= form.number_field :cpu_cores, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :memory %>
    <%= form.number_field :memory, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :storage, "Storage size" %>
    <%= form.number_field :storage, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :disk, "Disk type" %>
    <%= form.select :disk, VmSize.disks.keys, {}, { class: "custom-select" } %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-success"%>
  </div>
<% end %>
