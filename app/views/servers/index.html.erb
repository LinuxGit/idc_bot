<p id="notice"><%= notice %></p>

<h3>Server List</h3>

<table class="table">
  <thead>
    <tr class="table-secondary">
      <th>IP</th>
      <th>SN</th>
      <th>OS</th>
      <th>Purchase time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= link_to server.ip, server %></td>
        <td><%= server.sn %></td>
        <td><%= server.os %></td>
        <td><%= server.purchase_time %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

